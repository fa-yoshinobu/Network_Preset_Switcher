<Window x:Class="NetworkPresetSwitcher.VersionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource Version.Title}"
        Width="860"
        Height="560"
        MinWidth="720"
        MinHeight="480"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="{StaticResource BrushBorder}" BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="{Binding AppTitle}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding RuntimeTitle}" Foreground="{StaticResource BrushMuted}" Margin="0,6,0,0" />
                <TextBlock Text="{Binding AuthorTitle}" Foreground="{StaticResource BrushMuted}" Margin="0,2,0,0" />
                <TextBlock Margin="0,2,0,0">
                    <Run Text="{Binding ProjectUrlLabel, Mode=OneWay}" />
                    <Run Text=" " />
                    <Hyperlink Command="{Binding OpenProjectUrlCommand}">
                        <Run Text="{Binding ProjectUrlDisplay, Mode=OneWay}" />
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource Version.Tab.Libraries}">
                <Grid Margin="8">
                    <ListView x:Name="LibrariesList"
                              ItemsSource="{Binding Libraries}"
                              SizeChanged="LibrariesList_SizeChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn x:Name="LibraryColumn" Header="{DynamicResource Version.Column.Library}" Width="220" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn x:Name="VersionColumn" Header="{DynamicResource Version.Column.Version}" Width="90" DisplayMemberBinding="{Binding Version}" />
                                <GridViewColumn x:Name="LicenseColumn" Header="{DynamicResource Version.Column.License}" Width="120" DisplayMemberBinding="{Binding License}" />
                                <GridViewColumn x:Name="DescriptionColumn" Header="{DynamicResource Version.Column.Description}" Width="320">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource Version.Tab.Licenses}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="{Binding SelectedLibraryName}" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="{Binding SelectedLibraryVersion}" Foreground="{StaticResource BrushMuted}" />
                        <TextBlock Text="{Binding SelectedLibraryLicense}" Foreground="{StaticResource BrushMuted}" />
                    </StackPanel>

                    <TextBox Grid.Row="1"
                             Text="{Binding LicenseText, Mode=OneWay}"
                             FontFamily="{StaticResource AppFontMono}"
                             FontSize="11"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled" />
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="{DynamicResource Common.Button.Close}" Width="100" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>

