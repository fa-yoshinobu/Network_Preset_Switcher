<Window x:Class="NetworkPresetSwitcher.LicenseInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource License.Title}"
        Width="860"
        Height="520"
        MinWidth="720"
        MinHeight="440"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListView Grid.Row="0"
                  Grid.Column="0"
                  Margin="0,0,12,0"
                  ItemsSource="{Binding Libraries}"
                  SelectedItem="{Binding SelectedLibrary}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{DynamicResource License.Column.Library}" Width="170" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="{DynamicResource License.Column.Version}" Width="80" DisplayMemberBinding="{Binding Version}" />
                    <GridViewColumn Header="{DynamicResource License.Column.License}" Width="100" DisplayMemberBinding="{Binding License}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="{Binding SelectedLibraryName}" FontWeight="SemiBold" FontSize="13" />
                <TextBlock Text="{Binding SelectedLibraryVersion}" Foreground="{StaticResource BrushMuted}" />
                <TextBlock Text="{Binding SelectedLibraryLicense}" Foreground="{StaticResource BrushMuted}" />
            </StackPanel>

            <TextBox Grid.Row="1"
                     Text="{Binding LicenseText, Mode=OneWay}"
                     FontFamily="{StaticResource AppFontMono}"
                     FontSize="11"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled" />
        </Grid>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="{DynamicResource License.Button.OpenUrl}" Width="120" Margin="0,0,8,0" Command="{Binding OpenUrlCommand}" />
            <Button Content="{DynamicResource Common.Button.Close}" Width="100" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>

